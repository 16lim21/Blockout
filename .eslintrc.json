{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": ["plugin:react/recommended", "standard"],
    "ignorePatterns": "docs/**/*.js",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4]
    }
}
